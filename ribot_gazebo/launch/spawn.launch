<launch>
    <!-- Launch file arguments-->
<!--    <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>-->
    <arg name="name" default="ribot"/>
    <arg name="x_pos" default="0.0"/>
    <arg name="y_pos" default="0.0"/>
    <arg name="z_pos" default="0.0"/>

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
    args="-urdf -param robot_description -model ribot -x 0.0 -y 0.0 -Y 0.0"/>

  <!-- Load the controllers -->
  <rosparam command="load"
            file="$(find ribot_description)/config/joints.yaml"
            ns="ribot_joint_state_controller"
            />
  <!-- <rosparam command="load"
            file="$(find ribot_description)/config/world_to_d_prismatic_x.yaml"
            ns="ribot_joint_state_controller"
            /> -->
  
  <node name="ribot_controller_spawner" 
        pkg="controller_manager" 
        type="spawner"
        args="ribot_joint_state_controller
              --timeout 0"
              />
</launch>